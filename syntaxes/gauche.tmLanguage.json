{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Gauche",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#regex"
				},
				{
					"include": "#paren-expression"
				}
			]
		},
		"paren-expression": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "punctuation.paren.open"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.paren.close"
				}
			},
			"name": "expression.group",
			"patterns": [
				{
					"include": "#expression"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.gauche",
					"match": "\\b(^|case|cond|cut|define|do|else|guard|if|include|lambda|let|letrec|use)\\b"
				}
			]
		},
		"math": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.gauche",
					"match": "\\b(+|-|*)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.gauche",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gauche",
					"match": "\\\\."
				}
			]
		},
		"regexp": {
			"name": "string.regex.gauche",
			"begin": "#/",
			"end": "/"
		}
	},
	"scopeName": "source.gauche"
}