{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Gauche",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#defkeywords"
				},
				{
					"include": "#libs"
				},
				{
					"include": "#math"
				},
				{
					"include": "#regex"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#paren-expression"
				}
			]
		},
		"paren-expression": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "punctuation.paren.open"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.paren.close"
				}
			},
			"name": "expression.group",
			"patterns": [
				{
					"include": "#expression"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.gauche",
					"match": "\\b(case|cond|cut|do|else|guard|if)\\b"
				}
			]
		},
		"defkeywords": {
			"patterns": [
				{
					"name": "keyword.define.gauche",
					"match": "\\b(define-class|define-method|define|lambda|let-values|letrec|let)\\b"
				}
			]
		},
		"libs": {
			"patterns": [
				{
					"name": "keyword.include.gauche",
					"match": "\\b(include|use)\\b"
				}
			]
		},
		"math": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.gauche",
					"match": "\\b(-)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.gauche",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gauche",
					"match": "\\\\."
				}
			]
		},
		"regexp": {
			"name": "string.regex.gauche",
			"begin": "#/",
			"end": "/",
			"patterns": [
				{
					"name": "constant.character.escape.gauche",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"name": "comment.gauche",
			"begin": ";",
			"end": "\n"
		}
	},
	"scopeName": "source.gauche"
}